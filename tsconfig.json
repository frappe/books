{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",

    "tests/**/*.ts",
    "tests/**/*.tsx",

    "frappe/**/*.ts",
    "models/**/*.ts",
    "patches/**/*.ts",
    "reports/**/*.ts",
    "accounting/**/*.ts",
    "accounting/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
